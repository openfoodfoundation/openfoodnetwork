- if products.any?
  = render partial: 'table', locals: { products: products }
- else
  #no-products
    = t('.no_products_found')
    #no-products-actions
      %a{ href: "/admin/products/new", class: "button icon-plus", icon: "icon-plus" }
        = t(:new_product)
      %a{ href: "/admin/products/import", class: "button icon-upload secondary", icon: "icon-upload" }
        = t(".import_products")
