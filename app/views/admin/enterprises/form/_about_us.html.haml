.row
  .alpha.three.columns
    = f.label :description, t('.desc_short')
  .omega.eight.columns
    = f.text_field :description, maxlength: 255, placeholder: t('.desc_short_placeholder')
.row
  .alpha.three.columns
    = f.label :long_description, t('.desc_long')
  .omega.eight.columns
