%div{ng: {app: 'ofn.admin'}}

  %h5 #{t('admin.product_import.index.select_file')}
  %br
  = form_tag main_app.admin_product_import_path, multipart: true, class: 'product-import' do
    %label #{t('admin.product_import.index.spreadsheet')}
    %br
    = file_field_tag :file
    %br
    %br
    %label #{t('admin.product_import.index.import_into')}
    %br
    = select_tag "settings[import_into]", options_for_select({"#{t('admin.product_import.index.product_list')}" => :product_list, "#{t('admin.product_import.index.inventories')}" => :inventories}), {class: 'select2 select2-no-search'}
    %br
    %br
    %br
    = submit_tag "#{t('admin.product_import.index.import')}"
