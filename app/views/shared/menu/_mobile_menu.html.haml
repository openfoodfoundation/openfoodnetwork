%nav.tab-bar.show-for-medium-down
  %section.left
    %a.left-off-canvas-toggle.menu-icon
      %span
  %section.right
    .cart
      = render partial: "shared/menu/cart"
    %a{href: main_app.shop_path}
      {{ CurrentHub.hub.name }}

%aside.left-off-canvas-menu.show-for-medium-down
  %ul.off-canvas-list
    %li= link_to image_tag("ofn_logo_small.png"), root_path
    
    - if current_page? root_path
      %li.li-menu
        %a{"ofn-scroll-to" => "hubs"}
          %span.nav-primary 
            %i.ofn-i_040-hub
            Hubs
    - else
      %li.li-menu
        %a{href: root_path + "#/#hubs"}
          %span.nav-primary 
            %i.ofn-i_040-hub
            Hubs
    %li.li-menu
      %a{href: main_app.map_path}
        %span.nav-primary 
          %i.ofn-i_037-map
          Map
    %li.li-menu
      %a{href: main_app.producers_path}
        %span.nav-primary 
          %i.ofn-i_036-producers
          Producers
    %li.li-menu
      %a{href: main_app.groups_path}
        %span.nav-primary 
          %i.ofn-i_035-groups
          Groups

    %li
    - if spree_current_user.nil?
      = render 'shared/signed_out'
    - else
      = render 'shared/signed_in_offcanvas'
