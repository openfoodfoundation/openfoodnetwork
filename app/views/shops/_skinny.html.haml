.hub-container.active_table_row{"ng-if" => "hub.is_distributor", "ng-click" => "toggle($event)", "ng-class" => "{'closed' : !open(), 'is_distributor' : producer.is_distributor}"}
  %a.hub.skinny-head{"ng-href" => "{{::hub.path}}", "ng-attr-target" => "{{ embedded_layout ? '_blank' : undefined}}", "ng-class" => "{primary: hub.active, secondary: !hub.active}", "ofn-change-hub" => "hub", "data-is-link" => "true"}
    %i{ng: {class: "::hub.icon_font"}}
    %span.hub-name-listing{"ng-bind" => "::hub.name"}

  .hu-info
    .hu-info-item.with-gap
      %span.margin-top{"ng-bind" => "::hub.address.city"}
      %span.margin-top{"ng-bind" => "::hub.address.state_name"}
      %span.margin-top{"ng-if" => "hub.distance != null && hub.distance > 0"} ({{ hub.distance / 1000 | number:0 }} km)

    .hu-info-item{"ng-if" => "::hub.active"}
      %a.open_closed{"ng-href" => "{{::hub.path}}", "ng-attr-target" => "{{ embedded_layout ? '_blank' : undefined}}", "ng-class" => "{primary: hub.active, secondary: !hub.active}", "ofn-change-hub" => "hub"}
        %span.margin-top{ ng: { if: "::current()" } }
          %em= t :hubs_shopping_here
        %span.margin-top{ ng: { if: "::!current()" } }
          %span{"ng-bind" => "::hub.orders_close_at | sensible_timeframe"}
        %i.ofn-i_068-shop-reversed.show-for-medium-up
      %i{"ng-class" => "{'ofn-i_005-caret-down' : !open(), 'ofn-i_006-caret-up' : open()}"}

    .hu-info-item{"ng-if" => "::!hub.active"}
      %a.open_closed{"ng-href" => "{{::hub.path}}", "ng-attr-target" => "{{ embedded_layout ? '_blank' : undefined}}", "ng-class" => "{primary: hub.active, secondary: !hub.active}", "ofn-change-hub" => "hub"}
        %span.margin-top{ ng: { if: "::current()" } }
          %em= t :hubs_shopping_here
        %span.margin-top{ ng: { if: "::!current()" } }
          = t :hubs_orders_closed
        %i.ofn-i_068-shop-reversed.show-for-medium-up
      %i{"ng-class" => "{'ofn-i_005-caret-down' : !open(), 'ofn-i_006-caret-up' : open()}"}

.hub-container.active_table_row{"ng-if" => "!hub.is_distributor", "ng-class" => "closed"}
  %a.hub.skinny-head{"ng-click" => "openModal(hub)", "ng-class" => "{primary: hub.active, secondary: !hub.active}"}
    %i{ng: {class: "hub.icon_font"}}
    %span.hub-name-listing{"ng-bind" => "::hub.name"}

  %div{style: "clear: both;"}

  .hu-info
    .hu-info-item.with-gap
      %span.margin-top{"ng-bind" => "::hub.address.city"}
      %span.margin-top{"ng-bind" => "::hub.address.state_name"}

    .hu-info-item
      %span.margin-top{ ng: { if: "::!current()" } }
        %em= t :hubs_profile_only
